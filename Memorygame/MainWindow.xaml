<Window x:Class="Memorygame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Memorygame"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1200" WindowStyle="ThreeDBorderWindow">
    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="875*"/>
            <ColumnDefinition Width="300*"/>
            <ColumnDefinition Width="17*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="Memory_game" Margin="396,0,79,0" TextWrapping="Wrap" HorizontalAlignment="Center" Width="400" FontSize="36" Foreground="#FF1B1B1B" TextAlignment="Center" FontWeight="Bold" Background="#FF5151DE" Height="100" VerticalAlignment="Top"><Run Text="Memory game "/><LineBreak/><Run Text="Groep 19"/></TextBlock>
        <Button x:Name="Continue" Content="Continue" Margin="300,232,283,0" VerticalAlignment="Top" Height="60" Click="Button_Continue" Background="#FF5151DE" FontSize="36" RenderTransformOrigin="1,0" BorderBrush="Black" Foreground="White" Grid.ColumnSpan="2"/>
        <Button x:Name="New_Game" Content="New Game" Margin="300,334,283,0" VerticalAlignment="Top" Height="60" Click="Button_New_Game" Background="#FF5151DE" FontSize="36" RenderTransformOrigin="1,0" BorderBrush="Black" Foreground="White" Grid.ColumnSpan="2"/>
        <Button x:Name="Highscores" Content="Highscores" Margin="300,428,283,0" VerticalAlignment="Top" Height="60" Click="Button_Highscores" Background="#FF5151DE" FontSize="36" RenderTransformOrigin="1,0" BorderBrush="Black" Foreground="White" AutomationProperties.HelpText="Bekijk de highscores" Grid.ColumnSpan="2"/>
        <Button x:Name="Settings" Content="Settings" Margin="300,522,283,0" VerticalAlignment="Top" Height="60" Click="Button_Settings" Background="#FF5151DE" FontSize="36" RenderTransformOrigin="1,0" BorderBrush="Black" Foreground="White" AutomationProperties.HelpText="Bepaal de settings" Grid.ColumnSpan="2"/>
        <Button x:Name="Exit" Content="Exit" Margin="300,620,283,0" VerticalAlignment="Top" Height="60" Click="Button_Exit" Background="#FF5151DE" FontSize="36" RenderTransformOrigin="1,0" BorderBrush="Black" Foreground="White" AutomationProperties.HelpText="Sluit de game" Grid.ColumnSpan="2"/>
        <Button x:Name="Help" Content="" HorizontalAlignment="Left" Margin="205,25,0,0" VerticalAlignment="Top" Width="70" Height="55" Click="Help_Click" Grid.Column="1">
            <Button.Background>
                <ImageBrush ImageSource="images/Help.png"/>
            </Button.Background>
        </Button>

    </Grid>
</Window>
