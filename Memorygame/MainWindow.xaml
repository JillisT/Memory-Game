<Window x:Class="Memorygame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Memorygame"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas>
        <StackPanel HorizontalAlignment="center" x:Name="spelstart" Canvas.Left="330" Canvas.Top="10">
            <Label Content="MemoryGame groep 19" Margin="0,0,0,100" />
            <Button Content="Nieuw spel starten" Click="Button_Click" Margin="0,0,0,20"/>
            <Button Margin="0,0,0,20">Button 2</Button>
            <Button>Button 3</Button>
        </StackPanel>
        <StackPanel HorizontalAlignment="center" x:Name="naaminvoer" Canvas.Left="342" Canvas.Top="38">

            <Label Content="Voer uw naam in" Margin="0,0,0,30" />
            <TextBox Height="23" TextWrapping="Wrap" Text="TextBox" Width="120"/>
            <Label Content="Voer naam speler 2 in" Margin="0,0,0,30" />
            <TextBox Height="23" TextWrapping="Wrap" Text="TextBox" Width="120"/>
            <Button x:Name="startspel" Content="Spel starten" Click="startspel_click"></Button>
            <Button x:Name="terug" Content="Terug" Click="terug_click"></Button>
        </StackPanel>
    </Canvas>
</Window>
